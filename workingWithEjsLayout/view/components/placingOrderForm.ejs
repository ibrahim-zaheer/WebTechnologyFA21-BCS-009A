<h1>Insert Data</h1>
<div class="container">
    <div class="row">
        <div class="col-md-6"><img src="images/AppKiQurbani.jpg" width="300" alt=""></div>
        <div class="col-md-6">
            <form action="/insertOrder" method="POST">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" required><br>
                
                <label for="phoneNumber">Phone Number:</label>
                <input type="tel" id="phoneNumber" name="phoneNumber" required><br>
                
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required><br>
                
                <label for="outlet">Outlet:</label>
                <input type="text" id="outlet" name="outlet" required><br>
                
                <label for="address">Address:</label>
                <input type="text" id="address" name="address" required><br>
                
                <label for="animal">Animal:</label>
                <input type="text" id="animal" name="animal" required><br>
                
                <label for="quantity">Quantity:</label>
                <input type="number" id="quantity" name="quantity" required><br>
                
                <label for="deliveryDay">Delivery Day:</label>
                <input type="date" id="deliveryDay" name="deliveryDay" required><br>
                
                <label for="message">Message:</label>
                <textarea id="message" name="message"></textarea><br>
                
                <button type="submit">Submit</button>
            </form>
        </div>
    </div>
</div>
