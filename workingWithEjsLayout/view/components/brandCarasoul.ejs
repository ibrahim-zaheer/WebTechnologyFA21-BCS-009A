<div class="container mt-5">
    <h2 class="text-center mb-4">Our Valuable Customers</h2>
    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="2000"> <!-- Set data-interval to 2000 milliseconds -->
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
      </ol>
    
      <!-- Wrapper for slides -->
      <div class="carousel-inner" style="text-align: center;"> <!-- Center align the images -->
        <div class="carousel-item active"> <!-- Use carousel-item instead of item -->
          <img src="images/brands/cheetos.jpg" class="brand-image" alt="Los Angeles"> <!-- Add a custom class to handle width -->
        </div>
    
        <div class="carousel-item">
          <img src="images/brands/nike.jpg" class="brand-image" alt="Chicago">
        </div>
    
        <div class="carousel-item">
          <img src="images/brands/OIP.jpg" class="brand-image" alt="New York">
        </div>
      </div>
    
      <!-- Left and right controls -->
      <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
</div>
