<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Select Item</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <h1>Select Item</h1>
    <ul>
        <% items.forEach(item => { %>
            <li>
                <%= item.name %> - <%= item.quantity %> - <%= item.price %> 
                <button class="deleteBtn" data-id="<%= item._id %>">Delete</button>
                <button class="updateBtn" data-id="<%= item._id %>">Update</button>
            </li>
        <% }); %>
    </ul>

    <script>
        $(document).ready(function() {
            // Add click event listener for delete buttons
            $(".deleteBtn").on("click", function() {
                const itemId = $(this).data("id");
                $.ajax({
                    url: "/api/meat/api/meat" + itemId,
                    type: "DELETE",
                    success: function(response) {
                        // Handle success response if needed
                        console.log("Item deleted successfully:", response);
                    },
                    error: function(error) {
                        // Handle error response if needed
                        console.error("Error deleting item:", error);
                    }
                });
            });

            // Add click event listener for update buttons
            $(".updateBtn").on("click", function() {
                const itemId = $(this).data("id");
                window.location.href = "/api/meat/" + itemId;
            });
        });
    </script>
</body>
</html>
